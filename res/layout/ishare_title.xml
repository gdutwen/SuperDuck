<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y30"
    android:background="@color/titelyellow" >

    <ImageButton
        android:id="@+id/ib_ishare_main_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/y9"
        android:layout_marginLeft="@dimen/x11"
        android:layout_marginTop="@dimen/y9"
        android:background="#00000000"
        android:src="@drawable/icon_nav" />

    <TextView
        android:id="@+id/nbcircle_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="爱分享"
        android:textColor="#323232"
        android:textSize="@dimen/y11" />

    <ImageButton
        android:id="@+id/nbcircle_add_tpye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x13"
        android:background="#00000000"
        android:clickable="true"
        android:src="@drawable/icon_add_choose" />

</RelativeLayout>