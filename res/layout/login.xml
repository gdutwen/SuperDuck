<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:greendroid="http://schemas.android.com/apk/res/sjkj.wen.superduck"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/backgroud"
    android:paddingLeft="@dimen/x14"
    android:paddingRight="@dimen/x14">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y57"
            android:layout_marginLeft="@dimen/x105"
            android:layout_marginRight="@dimen/x105"
            android:layout_marginTop="@dimen/y49"
            android:layout_marginBottom="@dimen/y23"
            android:src="@drawable/icon_logo"
            android:layout_gravity="center_horizontal"
            />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/backgroudwhite"
        >
        <LinearLayout
            style="@style/LinearlayoutStyle1">
            <ImageView
                style="@style/ImageviewStyle1"
                android:src="@drawable/icon_username"
                />
            <sjkj.wen.superduck.activity.view.ClearEditTextUtils
                android:id="@+id/et_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/x14"                
                android:textSize="@dimen/y9"
                android:textColor="#4d4d4d"
                android:hint="请输入您的账号"
                android:background="@null"/>
        </LinearLayout>
         <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e6e6e6"/>

        <LinearLayout
            style="@style/LinearlayoutStyle1"
            android:orientation="horizontal">
            <ImageView
                style="@style/ImageviewStyle1"              
                android:src="@drawable/icon_password"
               />
            

            <sjkj.wen.superduck.activity.view.ClearEditTextUtils
                android:id="@+id/et_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"                
                android:background="@null"               
                android:hint="请输入您的密码"
                android:textSize="@dimen/y9"
                android:textColor="#4d4d4d"
                />
            
            <CheckBox
                android:id="@+id/ck_leye"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/y12"
                android:layout_marginBottom="@dimen/y12"
                android:layout_marginRight="@dimen/x14"
                android:background="@drawable/selector_eye"
                android:button="@null"
                />
           
        </LinearLayout>

       
    </LinearLayout>
    <Button
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y28"
        android:layout_marginTop="@dimen/y16"
        android:background="@drawable/selector_login_button"
        android:text="登 录"
        android:textColor="#4d4d4d"        
        android:textSize="@dimen/y10"
        android:enabled="false"/>
   
    <sjkj.wen.superduck.activity.view.BorderButton
        android:id="@+id/bt_forgetpassword"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/y13"
		greendroid:layout_borderBottom="true"
		android:text="忘记密码"
        android:layout_gravity="right"
		android:textSize="@dimen/y9"
		android:textColor="#4d4d4d">
	</sjkj.wen.superduck.activity.view.BorderButton>
    <Button
        android:id="@+id/bt_register"
        android:layout_width="@dimen/x119"
        android:layout_height="@dimen/y21"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/y13"
        android:background="@drawable/shape_rg_buttton"
        android:text="注 册"
        android:textSize="@dimen/y9"/>

</LinearLayout>
