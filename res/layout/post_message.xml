<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroud" >
    <RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/y30"
	    android:background="@color/titelyellow"
	    >
	    <ImageButton 
	        android:id="@+id/bt_back"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:src="@drawable/icon_nav"
	        android:background="#00000000"
	        android:layout_marginLeft="@dimen/x11"
	        android:layout_marginTop="@dimen/y9"
	        android:layout_marginBottom="@dimen/y9"
	       android:layout_centerVertical="true"
	        />
	    <TextView 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_centerInParent="true"        
	        android:text="发帖"
	        android:textSize="@dimen/y11"
	        android:textColor="#323232"/>
	    <TextView 
	        android:id="@+id/bt_post_msg_know"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="@dimen/x9"       
	        android:text="发帖须知"
	        android:textSize="@dimen/y9"
	        android:textColor="#323232"/>   
    </RelativeLayout>
    <RadioGroup 
        android:layout_height="@dimen/y28"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/x18"
        android:orientation="horizontal"
        android:gravity="center_horizontal|center_vertical">
        <RadioButton 
            android:layout_height="@dimen/y19"
            android:layout_width="@dimen/x71"
            android:background="@drawable/bg_check_prise_critism"            
            android:button="@null"
            android:checked="true"
            android:text="赞"
            android:gravity="center"
            android:textColor="#4d4d4d"
            android:textSize="@dimen/y8"/>
        <RadioButton 
            android:layout_height="@dimen/y19"
            android:layout_width="@dimen/x71" 
            android:background="@drawable/bg_uncheck_prise_critism"
            android:layout_marginLeft="10dp"           
            android:button="@null"
            android:gravity="center"
            android:text="弹"
            android:textColor="#4d4d4d"
            android:textSize="@dimen/y8"/>
    </RadioGroup>
     <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e6e6e6"
            android:layout_marginLeft="@dimen/x18"/>
     <EditText 
         android:background="@color/backgroudwhite"
         android:layout_height="@dimen/y25"
         android:layout_width="match_parent"
         android:layout_marginLeft="@dimen/x18"
         android:gravity="center_vertical"
         android:hint="标题"
         android:textColor="#8b8b8b"
         android:textSize="@dimen/y8"
         />
     <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e6e6e6"
            android:layout_marginLeft="@dimen/x18"
            />
     <EditText 
         android:background="@color/backgroudwhite"
         android:layout_height="@dimen/y69"
         android:layout_width="match_parent"
         android:layout_marginLeft="@dimen/x18"
         android:paddingTop="@dimen/y6"
         android:hint="写你所想写的......"
         android:textColor="#8b8b8b"
         android:textSize="@dimen/y8"
         android:gravity="top"
         />
     <LinearLayout 
         android:layout_height="@dimen/y38"
         android:layout_width="@dimen/x46"
         android:orientation="vertical"
         android:background="@drawable/bg_add_pic"
         android:layout_marginLeft="@dimen/x18"
         >
	     <ImageButton 
	         android:layout_height="@dimen/y25"
	         android:layout_width="@dimen/x46"
	         android:background="@null"
	         android:src="@drawable/icon_add_pic"/>
	     <TextView 
	         android:layout_height="wrap_content"
	         android:layout_width="wrap_content"
	         android:text="添加图片"
	         android:textColor="#8b8b8b"
	         android:textSize="@dimen/y6"
	         android:layout_gravity="center_horizontal"/>
     </LinearLayout>
     <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e6e6e6"
            android:layout_marginLeft="@dimen/x18"
            android:layout_marginTop="@dimen/y6"/>
     <LinearLayout 
         android:layout_height="@dimen/y25"
         android:layout_width="match_parent"
         android:layout_marginLeft="@dimen/x18"
         android:background="@color/backgroudwhite">
	     <CheckBox 
	         android:layout_height="@dimen/y8"
	         android:layout_width="wrap_content"         
	         android:background="@drawable/bg_unanony_checked"
	         android:checked="false"
	         android:button="@null"  
	         android:layout_gravity="center"               
	         />
	     <TextView 
	         android:layout_height="wrap_content"
	         android:layout_width="wrap_content"
	         android:layout_marginLeft="@dimen/x5"
	         android:layout_gravity="center"
	         android:text="匿名发表"
	         android:textColor="#4d4d4d"
	         android:textSize="@dimen/y8"/>
     </LinearLayout>
     <Button
        android:id="@+id/bt_register"
        android:layout_marginTop="@dimen/y31"
        android:layout_marginLeft="@dimen/x14"
        android:layout_marginRight="@dimen/x14"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y28"
        android:background="@drawable/shape_login_button"
        android:text="发 表"
        android:textSize="@dimen/y10"
        android:textColor="#4d4d4d" 
        />
</LinearLayout>
