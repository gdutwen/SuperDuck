<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y127"
    android:orientation="vertical"
    android:background="@color/backgroud" 
    android:paddingLeft="@dimen/x11"
    android:paddingRight="@dimen/x11">
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="评论"
        android:layout_marginTop="@dimen/y4"
        android:textColor="#4d4d4d"
        android:textSize="@dimen/y9"/>
    <EditText 
         android:background="@drawable/shape_edtext"
         android:layout_height="@dimen/y70"
         android:layout_width="match_parent"
         android:layout_marginTop="@dimen/y6"
         android:padding="@dimen/y6"
         android:hint="写评论......"
         android:textColor="#b3b3b3"
         android:textSize="@dimen/y8"
         android:gravity="top"
         />
    <RelativeLayout 
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/x11"
        android:paddingRight="@dimen/x11">
        <Button 
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/answerpost"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="评论"
            android:textSize="@dimen/y10"
            android:enabled="false"
            android:background="@drawable/selector_login_button"
            />
        <LinearLayout 
	         android:layout_height="wrap_content"
	         android:layout_width="wrap_content"
	         android:layout_centerVertical="true"
	         android:layout_toLeftOf="@id/answerpost">
		     <CheckBox 
		         android:layout_height="wrap_content"
		         android:layout_width="wrap_content"         
		         android:background="@drawable/selector_anony_post"
		         android:checked="false"
		         android:button="@null"              
		         />
		     <TextView 
		         android:layout_height="wrap_content"
		         android:layout_width="wrap_content"
		         android:layout_marginLeft="@dimen/x5"
		         android:layout_marginRight="@dimen/x14"
		         android:layout_gravity="center"
		         android:text="匿名评论"
		         android:textColor="#4d4d4d"
		         android:textSize="@dimen/y8"/>
	     </LinearLayout>
    </RelativeLayout>
</LinearLayout>
