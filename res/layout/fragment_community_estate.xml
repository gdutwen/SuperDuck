<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#f8f8f8" >
   <FrameLayout 
       android:layout_height="@dimen/y113"
       android:layout_width="match_parent"
       android:background="@android:color/holo_blue_bright">
       <RelativeLayout 
           android:layout_height="@dimen/y25"
           android:layout_width="match_parent"
           android:background="#00000000"
           android:layout_gravity="bottom">
           <TextView 
               android:layout_height="@dimen/y9"
               android:layout_width="wrap_content"
               android:text="物业公司简介"
               android:textSize="12sp"
               android:textColor="#ffffff"
               android:layout_marginLeft="20dp"
               android:layout_centerVertical="true"/>
           <LinearLayout 
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
               android:orientation="horizontal">
	           <TextView 
	               android:layout_height="@dimen/y9"
	               android:layout_width="wrap_content"
	               android:text="详情"
	               android:textSize="12sp"
	               android:textColor="#ffffff"
	               />
	           <ImageView 
	               android:layout_marginLeft="10dp"
	               android:layout_height="@dimen/y9"
	               android:layout_width="wrap_content"
	               android:src="@drawable/enter"
	               android:layout_marginRight="20dp"
	               android:background="#00000000"/>
           </LinearLayout>
       </RelativeLayout>
   </FrameLayout>
   <LinearLayout 
       android:layout_height="@dimen/y27"
       android:layout_width="match_parent"
       android:layout_marginTop="@dimen/y13"
       android:background="#ffffff"
      >
       <ImageView 
           android:layout_height="@dimen/y8"
           android:layout_width="@dimen/x44"
           android:src="@drawable/icon_community_ad"
           android:layout_gravity="center_vertical"/>
       <TextView 
           android:layout_height="@dimen/y27"
           android:layout_width="wrap_content"
           android:text="小区公告"
           android:textColor="#4d4d4d"
           android:gravity="center_vertical"
          />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="right"
          android:layout_gravity="center_vertical"
          >
          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"             
              android:layout_marginRight="20dp"
              android:src="@drawable/enter" />
      </LinearLayout>
   </LinearLayout>
   <ImageView 
       android:layout_height="1dp"
       android:layout_width="match_parent"
       />
   <LinearLayout 
       android:layout_height="@dimen/y27"
       android:layout_width="match_parent"
       android:background="#ffffff"
      >
       <ImageView 
           android:layout_height="@dimen/y8"
           android:layout_width="@dimen/x44"
           android:src="@drawable/icon_community_pay"
           android:layout_gravity="center_vertical"/>
       <TextView 
           android:layout_height="@dimen/y27"
           android:layout_width="wrap_content"
           android:text="物业缴费"
           android:textColor="#4d4d4d"
           android:gravity="center_vertical"
          />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="right"
          android:layout_gravity="center_vertical"
          >
          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"             
              android:layout_marginRight="20dp"
              android:src="@drawable/enter" />
      </LinearLayout>
   </LinearLayout>
   <ImageView 
       android:layout_height="2dp"
       android:layout_width="match_parent"
       />
   <LinearLayout 
       android:layout_height="@dimen/y27"
       android:layout_width="match_parent"
       android:background="#ffffff"
      >
       <ImageView 
           android:layout_height="@dimen/y8"
           android:layout_width="@dimen/x44"
           android:src="@drawable/icon_community_friend"
           android:layout_gravity="center_vertical"/>
       <TextView 
           android:layout_height="@dimen/y27"
           android:layout_width="wrap_content"
           android:text="友赞友弹"
           android:textColor="#4d4d4d"
           android:gravity="center_vertical"
          />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="right"
          android:layout_gravity="center_vertical"
          >
          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"             
              android:layout_marginRight="20dp"
              android:src="@drawable/enter" />
      </LinearLayout>
   </LinearLayout>
   <ImageView 
       android:layout_height="2dp"
       android:layout_width="match_parent"
       />
   <LinearLayout 
       android:layout_height="@dimen/y27"
       android:layout_width="match_parent"
       android:background="#ffffff"
      >
       <ImageView 
           android:layout_height="@dimen/y8"
           android:layout_width="@dimen/x44"
           android:src="@drawable/icon_community_repairs"
           android:layout_gravity="center_vertical"/>
       <TextView 
           android:layout_height="@dimen/y27"
           android:layout_width="wrap_content"
           android:text="物业报修"
           android:textColor="#4d4d4d"
           android:gravity="center_vertical"
          />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="right"
          android:layout_gravity="center_vertical"
          >
          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"             
              android:layout_marginRight="20dp"
              android:src="@drawable/enter" />
      </LinearLayout>
   </LinearLayout>
   <ImageView 
       android:layout_height="2dp"
       android:layout_width="match_parent"
       />
   <LinearLayout 
       android:layout_height="@dimen/y27"
       android:layout_width="match_parent"
       android:background="#ffffff"
      >
       <ImageView 
           android:layout_height="@dimen/y8"
           android:layout_width="@dimen/x44"
           android:src="@drawable/icon_community_phone"
           android:layout_gravity="center_vertical"/>
       <TextView 
           android:layout_height="@dimen/y27"
           android:layout_width="wrap_content"
           android:text="号码通"
           android:textColor="#4d4d4d"
           android:gravity="center_vertical"
          />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="right"
          android:layout_gravity="center_vertical"
          >
          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"             
              android:layout_marginRight="20dp"
              android:src="@drawable/enter" />
      </LinearLayout>
   </LinearLayout>
   <ImageView 
       android:layout_height="2dp"
       android:layout_width="match_parent"
       />
</LinearLayout>
