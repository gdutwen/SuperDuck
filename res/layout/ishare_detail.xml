<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/sjkj.wen.superduck"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/backgroud">
    
  <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="@dimen/y30"
    android:background="@color/titelyellow"
    >
    <ImageButton 
        android:id="@+id/nbcircle_back"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/icon_nav"
        android:background="#00000000"
        android:layout_marginLeft="@dimen/x11"
        android:layout_marginTop="@dimen/y9"
        android:layout_marginBottom="@dimen/y9"
        android:layout_centerVertical="true"
        />
    <TextView 
        android:id="@+id/nbcircle_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"        
        android:text="详情"
        android:textSize="@dimen/y11"
        android:textColor="#323232"/> 
    <ImageButton 
        android:id="@+id/nbcircle_add_tpye"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/icon_post_detail"
        android:background="#00000000"
        android:layout_marginRight="@dimen/x13"        
       android:layout_centerVertical="true"
       android:layout_alignParentRight="true"
       android:clickable="true"
        />
  </RelativeLayout>
  <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@color/backgroudwhite">
     <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <LinearLayout 
            android:layout_height="@dimen/y38"
            android:layout_width="match_parent">
           <sjkj.wen.superduck.activity.view.CircleImageView
                android:id="@+id/ishare_detail_head_photo"
	            android:layout_width="@dimen/x36"
	            android:layout_height="@dimen/y25"
	            android:layout_centerVertical="true"
	            android:src="@drawable/hugh"
	            app:border_width="2dp"
	            app:border_color="#FF222222"
	            android:layout_marginLeft="@dimen/x9"
	            android:layout_marginTop="@dimen/y3" 
	            android:layout_marginBottom="@dimen/y9"/>
           <TextView 
               android:id="@+id/ishare_detail_user_name"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:layout_gravity="center"
               android:textColor="#4d4d4d"
               android:textSize="@dimen/y9"
               android:layout_marginLeft="@dimen/x9"/>
           <TextView 
               android:id="@+id/ishare_detail_messge_time"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:layout_weight="1"
               android:layout_gravity="center"
               android:gravity="right"
               android:textColor="#8b8b8b"
               android:layout_marginRight="@dimen/x9"/>
        </LinearLayout>
        <TextView 
               android:id="@+id/ishare_detail_message_title"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:textColor="#4d4d4d"
               android:textSize="@dimen/y9"
               android:layout_marginLeft="@dimen/x9"/>
        <TextView 
               android:id="@+id/ishare_detail_message_content"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:layout_marginTop="@dimen/y4"
               android:textColor="#4d4d4d"
               android:textSize="@dimen/y8"
               android:layout_marginLeft="@dimen/x9"
               android:layout_marginRight="@dimen/x9"
               android:lineSpacingExtra="@dimen/y4"
               android:maxLines="2"
               android:maxEms="17"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/x9">

        <GridView
            android:id="@+id/ishare_detail_showpic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnWidth="90dp"
            android:gravity="center"
            android:horizontalSpacing="10dp"
            android:numColumns="3"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dp" >
        </GridView>
                
    </LinearLayout>
   <LinearLayout 
       android:layout_height="@dimen/y28"
       android:layout_width="match_parent"
       >
       <ImageView 
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:src="@drawable/ishare_address"
           android:layout_gravity="center"
           android:layout_marginLeft="@dimen/x9"/>
       <TextView 
           android:id="@+id/ishare_post_address"
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:textColor="#2e9aff"
           android:textSize="@dimen/y8"
           android:layout_gravity="center"
           android:layout_marginLeft="@dimen/x9"/>
       <LinearLayout 
           android:layout_height="wrap_content"
           android:layout_width="match_parent"
           android:layout_weight="1"
           android:layout_gravity="center"
           android:gravity="right">
           <TextView 
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:text="..."
               android:textColor="#8b8b8b"
               android:textSize="@dimen/y9"
               android:layout_marginRight="@dimen/x5"
               android:layout_gravity="center"/>
           <sjkj.wen.superduck.activity.view.CircleImageView
	            android:layout_height="@dimen/y16"
                android:layout_width="@dimen/x22"
	            android:layout_centerVertical="true"
	            android:src="@drawable/pic1"
	            app:border_width="1px"
	            app:border_color="#FF222222"/>
           <sjkj.wen.superduck.activity.view.CircleImageView
	            android:layout_height="@dimen/y16"
                android:layout_width="@dimen/x22"
	            android:layout_centerVertical="true"
	            android:src="@drawable/pic1"
	            app:border_width="1px"
	            app:border_color="#FF222222"/>
           <sjkj.wen.superduck.activity.view.CircleImageView
	            android:layout_height="@dimen/y16"
                android:layout_width="@dimen/x22"
	            android:layout_centerVertical="true"
	            android:src="@drawable/pic1"
	            app:border_width="1px"
	            app:border_color="#FF222222"/>
           <TextView 
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:text="23赞"
               android:textColor="#8b8b8b"
               android:textSize="@dimen/y9"
               android:layout_marginLeft="@dimen/x5"
               android:layout_marginRight="@dimen/x11"
               android:layout_gravity="center"/>
           
       </LinearLayout>
   </LinearLayout>
  </LinearLayout>
  <ImageView
      android:layout_width="match_parent"
      android:layout_height="1px"
      android:background="#e6e6e6"/>
  <LinearLayout 
      android:id="@+id/ll_detail_none"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:layout_weight="1"
      android:orientation="vertical">
	  <LinearLayout 
	      android:layout_height="@dimen/y23"
	      android:layout_width="match_parent"
	      android:background="@color/backgroudwhite">
	      <ImageView 
	          android:layout_height="wrap_content"
	          android:layout_width="@dimen/x11"
	          android:src="@drawable/ring"
	          android:layout_marginLeft="@dimen/x11"
	          android:layout_gravity="center"
	          android:layout_marginRight="@dimen/x11"
	          />
	      <TextView 
	          android:layout_height="wrap_content"
	          android:layout_width="wrap_content"
	          android:text="评论"
	          android:textColor="#4d4d4d"
	          android:textSize="@dimen/y10"
	          android:layout_gravity="center"/>
	      <TextView 
	          android:layout_height="wrap_content"
	          android:layout_width="wrap_content"
	          android:layout_marginLeft="@dimen/x11"
	          android:text="0"
	          android:textColor="#4d4d4d"
	          android:textSize="@dimen/y10"
	          android:layout_gravity="center"/>
	  </LinearLayout>
	  <ImageView
	            android:layout_width="match_parent"
	            android:layout_height="1px"
	            android:background="#e6e6e6"/>
	  <TextView 
	      android:layout_height="@dimen/y103"
	      android:layout_width="match_parent"	      
	      android:text="空空如也，快来捧个场吧~"
	      android:gravity="center"/>
  </LinearLayout>
  <ListView 
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:layout_weight="1"
      android:visibility="gone"/>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/y28"
      android:background="@color/backgroudwhite"
       >

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_weight="1"
          android:gravity="center" >

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/praise" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:text="赞"
              android:textColor="#4d4d4d"
              android:textSize="@dimen/y10"
              android:layout_marginLeft="@dimen/x5" />
      </LinearLayout>
     <ImageView
            android:layout_width="1px"
            android:layout_height="@dimen/y11"
            android:background="#e6e6e6"
            android:layout_gravity="center"/>
      <LinearLayout
          android:id="@+id/ll_answerpost"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_weight="1"
          android:gravity="center" >

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/comment" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:layout_marginLeft="@dimen/x5"
              android:text="评论"
              android:textColor="#4d4d4d"
              android:textSize="@dimen/y10" />
      </LinearLayout>
  </LinearLayout>

</LinearLayout>
