<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/backgroud">
    <include layout="@layout/title"
        />
    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:background="@color/backgroudwhite"
	        android:layout_marginLeft="@dimen/x14"
            android:layout_marginRight="@dimen/x14"
	        android:layout_marginTop="@dimen/y5"
        >
	    <LinearLayout        
	            style="@style/LinearlayoutStyle1"
	            >
	            <ImageView
	                style="@style/ImageviewStyle1"
	                android:src="@drawable/icon_username" />
	        >

	            <sjkj.wen.superduck.activity.view.ClearEditTextUtils
	                android:id="@+id/et_rp_phone"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:layout_gravity="center|right"
	                android:hint="请输入您的手机号码"
                    android:textSize="@dimen/y9"
                    android:textColor="#b3b3b3"
                    android:layout_marginRight="@dimen/x7"
	                android:background="@null"/>
	
	            <Button
	                android:id="@+id/bt_id_code"
	                android:layout_gravity="center_vertical"
	                android:layout_width="@dimen/x80"
	                android:layout_height="@dimen/y18"
	                android:layout_marginRight="10dp"
	                android:background="@drawable/shape_verify_btn_normal"
	                android:text="获取验证码"
	                android:textSize="@dimen/y9" />

	        </LinearLayout>
	        <ImageView
	            android:layout_width="match_parent"
	            android:layout_height="1dp"
	            android:background="#e6e6e6"/>
	        <LinearLayout
	            style="@style/LinearlayoutStyle1">
	            <ImageView
	                style="@style/ImageviewStyle1"
	                android:src="@drawable/icon_idcode" />
	            <EditText
	                android:id="@+id/et_rp_verifycode"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"	             
	                android:layout_gravity="center"
	                android:background="@null"
	                android:hint="请输入验证码"
                    android:textSize="@dimen/y9"
                    android:textColor="#b3b3b3"/>
	        </LinearLayout>
	         <ImageView
	            android:layout_width="match_parent"
	            android:layout_height="1dp"
	            android:background="#e6e6e6"/>
	        <LinearLayout
            style="@style/LinearlayoutStyle1">

            <ImageView
                style="@style/ImageviewStyle1"
                android:src="@drawable/icon_password" />
            
	            <EditText
	                android:id="@+id/et_rp_password1"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:layout_gravity="center"
	                android:background="@null"
	                android:hint="请设置至少八位含数字字母密码"
                    android:textSize="@dimen/y9"
                    android:textColor="#b3b3b3"               />	
	            <CheckBox
	                android:id="@+id/ck_rpeye"
	                android:layout_height="wrap_content"
	                android:layout_width="wrap_content"
	                android:layout_gravity="center_vertical"
	                android:layout_marginTop="@dimen/y12"
	                android:layout_marginBottom="@dimen/y12"
	                android:layout_marginRight="@dimen/x14"
	                android:background="@drawable/selector_eye"
	                android:button="@null"
	                />
	         
        </LinearLayout>
	        <ImageView
	            android:layout_width="match_parent"
	            android:layout_height="1dp"
	            android:background="#e6e6e6"/>
	        <LinearLayout
	            style="@style/LinearlayoutStyle1">
	            <ImageView
	               style="@style/ImageviewStyle1"
	                android:src="@drawable/icon_password" />
	            <EditText
	                android:id="@+id/et_rp_password2"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center"
	                android:background="@null"
	                android:hint="请再次输入密码" 
                    android:textSize="@dimen/y9"
                    android:textColor="#b3b3b3"/>      
	        </LinearLayout> 
	  </LinearLayout>  
	  <Button
        android:id="@+id/bt_rp_finish"
        android:layout_marginTop="@dimen/y31"
        android:layout_marginLeft="@dimen/x14"
        android:layout_marginRight="@dimen/x14"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y28"
        android:background="@drawable/selector_login_button"
        android:text="完成"
        android:textSize="@dimen/y10"
        android:textColor="#4d4d4d" 
        android:enabled="false"
        />
</LinearLayout>
